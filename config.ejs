<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <title>Xenory Pro</title>
</head>
<body class="bg-[#0b0e14] text-gray-300 font-sans overflow-hidden text-sm">
    <div class="flex h-screen">
        <!-- BARRA LATERAL -->
        <aside class="w-72 bg-[#12151d] border-r border-gray-800 flex flex-col p-6">
            <h1 class="text-2xl font-black italic text-indigo-500 mb-10 tracking-tighter">XENORY <span class="text-white">PRO</span></h1>
            <nav class="flex-1 space-y-2">
                <a href="?p=general" class="flex items-center gap-3 p-4 rounded-2xl transition <%= page === 'general' ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-900/40' : 'hover:bg-gray-800' %>">
                    <i class="fas fa-shield-halved w-5"></i> <span class="font-bold">Segurança</span>
                </a>
                <a href="?p=welcome" class="flex items-center gap-3 p-4 rounded-2xl transition <%= page === 'welcome' ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-900/40' : 'hover:bg-gray-800' %>">
                    <i class="fas fa-door-open w-5"></i> <span class="font-bold">Boas-vindas</span>
                </a>
                <a href="?p=form" class="flex items-center gap-3 p-4 rounded-2xl transition <%= page === 'form' ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-900/40' : 'hover:bg-gray-800' %>">
                    <i class="fas fa-file-signature w-5"></i> <span class="font-bold">Recrutamento</span>
                </a>
                <a href="?p=stats" class="flex items-center gap-3 p-4 rounded-2xl transition <%= page === 'stats' ? 'bg-indigo-600 text-white shadow-lg shadow-indigo-900/40' : 'hover:bg-gray-800' %>">
                    <i class="fas fa-chart-line w-5"></i> <span class="font-bold">Dados do Server</span>
                </a>
            </nav>
            <div class="mt-auto pt-6 border-t border-gray-800">
                <a href="https://www.instagram.com/hexorylabs" target="_blank" class="flex items-center gap-3 p-4 text-pink-500 hover:bg-pink-500/10 rounded-2xl transition">
                    <i class="fab fa-instagram text-xl"></i> <span class="font-bold italic">@hexorylabs</span>
                </a>
            </div>
        </aside>

        <!-- CONTEÚDO -->
        <main class="flex-1 p-12 overflow-y-auto">
            <form action="/save/<%= guild.id %>" method="POST">
                <input type="hidden" name="last_page" value="<%= page %>">
                <div class="flex justify-between items-center mb-10">
                    <h2 class="text-3xl font-black text-white capitalize tracking-tight">
                        <% if(page === 'general') { %>Segurança<% } else if(page === 'welcome') { %>Boas-vindas<% } else if(page === 'form') { %>Recrutamento<% } else { %>Estatísticas<% } %>
                    </h2>
                    <button type="submit" class="bg-indigo-600 hover:bg-indigo-500 text-white px-8 py-3 rounded-xl font-black uppercase text-[10px] tracking-widest shadow-xl shadow-indigo-900/40 transition">Salvar Alterações</button>
                </div>

                <% if(page === 'general') { %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="bg-[#12151d] p-8 rounded-[2rem] border border-gray-800">
                        <label class="text-[10px] font-bold text-gray-500 block mb-4 uppercase">Cargo ao Entrar (Auto-Role)</label>
                        <select name="autoRoleId" class="w-full bg-black border border-gray-800 p-4 rounded-xl outline-none">
                            <option value="">Nenhum</option>
                            <% roles.forEach(r => { %> <option value="<%= r.id %>" <%= config.autoRoleId == r.id ? 'selected' : '' %>><%= r.name %></option> <% }) %>
                        </select>
                    </div>
                    <div class="bg-[#12151d] p-8 rounded-[2rem] border border-gray-800">
                        <label class="text-[10px] font-bold text-gray-500 block mb-4 uppercase">Cargo de Verificado</label>
                        <select name="verifyRoleId" class="w-full bg-black border border-gray-800 p-4 rounded-xl outline-none">
                            <option value="">Nenhum</option>
                            <% roles.forEach(r => { %> <option value="<%= r.id %>" <%= config.verifyRoleId == r.id ? 'selected' : '' %>><%= r.name %></option> <% }) %>
                        </select>
                    </div>
                </div>
                <% } %>

                <% if(page === 'welcome') { %>
                <div class="space-y-6">
                    <div class="bg-[#12151d] p-8 rounded-[2rem] border border-gray-800">
                        <label class="text-[10px] font-bold text-gray-500 block mb-4 uppercase">Canal de Boas-vindas</label>
                        <select name="welcomeChannelId" class="w-full bg-black border border-gray-800 p-4 rounded-xl outline-none">
                            <option value="">Desativado</option>
                            <% channels.filter(c => c.type === 0).forEach(ch => { %> <option value="<%= ch.id %>" <%= config.welcomeChannelId == ch.id ? 'selected' : '' %>># <%= ch.name %></option> <% }) %>
                        </select>
                        <label class="text-[10px] font-bold text-gray-500 block mt-6 mb-4 uppercase">Mensagem no Servidor (Use {user})</label>
                        <textarea name="welcomeMsg" class="w-full bg-black border border-gray-800 p-4 rounded-xl h-32 outline-none"><%= config.welcomeMsg %></textarea>
                    </div>
                    <div class="bg-[#12151d] p-8 rounded-[2rem] border border-gray-800">
                        <div class="flex justify-between items-center mb-4">
                           <label class="text-[10px] font-bold text-gray-500 uppercase">Habilitar Mensagem na DM?</label>
                           <input type="checkbox" name="enableDm" value="true" <%= config.enableDm ? 'checked' : '' %> class="w-6 h-6 accent-indigo-600">
                        </div>
                        <textarea name="welcomeDmMsg" class="w-full bg-black border border-gray-800 p-4 rounded-xl h-32 outline-none"><%= config.welcomeDmMsg %></textarea>
                    </div>
                </div>
                <% } %>

                <% if(page === 'form') { %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="bg-[#12151d] p-8 rounded-[2rem] border border-gray-800">
                        <label class="text-[10px] font-bold text-gray-500 block mb-4 uppercase">Canal Staff (Recebe Foto/Vídeo)</label>
                        <select name="formStaffChannelId" class="w-full bg-black border border-gray-800 p-4 rounded-xl outline-none">
                            <option value="">Selecione um canal...</option>
                            <% channels.filter(c => c.type === 0).forEach(ch => { %> <option value="<%= ch.id %>" <%= config.formStaffChannelId == ch.id ? 'selected' : '' %>># <%= ch.name %></option> <% }) %>
                        </select>
                    </div>
                    <div class="bg-[#12151d] p-8 rounded-[2rem] border border-gray-800">
                        <label class="text-[10px] font-bold text-gray-500 block mb-4 uppercase">Categoria das Fichas</label>
                        <select name="formCategoryId" class="w-full bg-black border border-gray-800 p-4 rounded-xl outline-none">
                            <option value="">Nenhuma</option>
                            <% channels.filter(c => c.type === 4).forEach(cat => { %> <option value="<%= cat.id %>" <%= config.formCategoryId == cat.id ? 'selected' : '' %>><%= cat.name %></option> <% }) %>
                        </select>
                    </div>
                    <div class="bg-[#12151d] p-8 rounded-[2rem] border border-gray-800">
                        <label class="text-[10px] font-bold text-gray-500 block mb-4 uppercase">Cargo Staff para Marcar</label>
                        <select name="staffRoleId" class="w-full bg-black border border-gray-800 p-4 rounded-xl outline-none">
                            <option value="">Ninguém</option>
                            <% roles.forEach(r => { %> <option value="<%= r.id %>" <%= config.staffRoleId == r.id ? 'selected' : '' %>><%= r.name %></option> <% }) %>
                        </select>
                    </div>
                    <div class="bg-[#12151d] p-8 rounded-[2rem] border border-gray-800">
                        <label class="text-[10px] font-bold text-gray-500 block mb-4 uppercase">Título da Ficha</label>
                        <input type="text" name="formTitle" value="<%= config.formTitle %>" class="w-full bg-black border border-gray-800 p-4 rounded-xl outline-none">
                    </div>
                </div>
                <% } %>

                <% if(page === 'stats') { %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="bg-indigo-600/10 p-10 rounded-[2.5rem] border border-indigo-500/20 text-center">
                        <p class="text-4xl font-black text-white tracking-tighter"><%= stats.members %></p>
                        <p class="text-[10px] font-bold uppercase text-indigo-400 mt-2 tracking-widest">Membros</p>
                    </div>
                    <div class="bg-pink-600/10 p-10 rounded-[2.5rem] border border-pink-500/20 text-center">
                        <p class="text-4xl font-black text-white tracking-tighter"><%= stats.boosts %></p>
                        <p class="text-[10px] font-bold uppercase text-pink-400 mt-2 tracking-widest">Boosts</p>
                    </div>
                </div>
                <% } %>
            </form>
        </main>
    </div>
</body>
</html>
