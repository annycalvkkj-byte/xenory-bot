<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <title>Xenory Pro | Google Sheets</title>
</head>
<body class="bg-[#0b0e14] text-gray-300 font-sans overflow-hidden">
    <div class="flex h-screen">
        <!-- SIDEBAR -->
        <aside class="w-72 bg-[#12151d] border-r border-gray-800 flex flex-col p-6">
            <div class="mb-10 text-center">
                <h1 class="text-2xl font-black italic text-indigo-500 tracking-tighter">XENORY <span class="text-white">PRO</span></h1>
            </div>
            <nav class="flex-1 space-y-2">
                <a href="?p=general" class="flex items-center gap-3 p-4 rounded-2xl transition <%= page === 'general' ? 'bg-indigo-600 text-white' : 'hover:bg-gray-800' %>">
                    <i class="fas fa-shield-halved"></i> <span class="font-bold text-sm">Cargos & Seguran√ßa</span>
                </a>
                <a href="?p=form" class="flex items-center gap-3 p-4 rounded-2xl transition <%= page === 'form' ? 'bg-indigo-600 text-white' : 'hover:bg-gray-800' %>">
                    <i class="fas fa-file-signature"></i> <span class="font-bold text-sm">Recrutamento</span>
                </a>
                <a href="?p=personality" class="flex items-center gap-3 p-4 rounded-2xl transition <%= page === 'personality' ? 'bg-indigo-600 text-white' : 'hover:bg-gray-800' %>">
                    <i class="fas fa-brain"></i> <span class="font-bold text-sm">Personalidade Bot</span>
                </a>
            </nav>
            <div class="mt-auto pt-6 border-t border-gray-800">
                <a href="https://www.instagram.com/hexorylabs" target="_blank" class="flex items-center gap-3 p-4 text-pink-500 hover:bg-pink-500/10 rounded-2xl transition">
                    <i class="fab fa-instagram text-xl"></i> <span class="font-bold text-sm">@hexorylabs</span>
                </a>
            </div>
        </aside>

        <!-- MAIN -->
        <main class="flex-1 p-12 overflow-y-auto">
            <form action="/save/<%= guild.id %>" method="POST">
                <input type="hidden" name="last_page" value="<%= page %>">
                <div class="flex justify-between items-center mb-10">
                    <h2 class="text-3xl font-black text-white capitalize"><%= page %></h2>
                    <button type="submit" class="bg-indigo-600 text-white px-10 py-3 rounded-2xl font-black uppercase text-[10px]">Salvar na Planilha</button>
                </div>

                <!-- ABA PERSONALIDADE -->
                <% if(page === 'personality') { %>
                <div class="bg-[#12151d] p-8 rounded-[2.5rem] border border-gray-800">
                    <label class="text-[10px] font-bold text-gray-600 block mb-2 uppercase">Defina a Personalidade (Atualiza no Google Sheets)</label>
                    <textarea name="personalidade" class="w-full bg-black border border-gray-800 p-5 rounded-2xl outline-none text-sm h-48 focus:border-indigo-600 transition"><%= config.personalidade %></textarea>
                </div>
                <% } %>

                <!-- ABA GERAL -->
                <% if(page === 'general') { %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="bg-[#12151d] p-8 rounded-[2rem] border border-gray-800">
                        <label class="text-[10px] font-bold text-gray-600 block mb-2">CARGO AO ENTRAR</label>
                        <select name="autoRoleId" class="w-full bg-black border border-gray-800 p-4 rounded-xl outline-none text-sm">
                            <option value="">Nenhum</option>
                            <% roles.forEach(r => { %> <option value="<%= r.id %>" <%= config.autoRoleId == r.id ? 'selected' : '' %>><%= r.name %></option> <% }) %>
                        </select>
                    </div>
                </div>
                <% } %>
            </form>
        </main>
    </div>
</body>
</html>
